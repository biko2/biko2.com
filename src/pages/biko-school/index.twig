              {{svgSprite('pencil')}}
            </div>
            <div class="flex-column">
              <p class="c-texto--small__uppercase">dónde</p>
              <p class="c-icon-list__text">En tal sitio</p>
              <p class="c-icon-list__text--small">(Plaza Cein, 5 31110 Noáin - Navarra)</p>
